{
    "Product": {
        "required": ["name", "description", "price", "category"],
        "tags": ["Review"],

        "properties": {
            "name": {
                "type": "string",
                "example": "Modern Wooden Table"
            },
            "description": {
                "type": "string",
                "example": "A beautifully crafted modern wooden dining table."
            },
            "price": {
                "type": "number",
                "example": 2500
            },
            "images": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "public_id": { "type": "string", "example": "abc123" },
                        "url": { "type": "string", "example": "https://example.com/image.jpg" }
                    }
                }
            },
            "stock": {
                "type": "integer",
                "example": 25
            },
            "category": {
                "type": "string",
                "example": "64e5b0f6c2a7e3a0f1234567"
            },
            "ratingsAverage": {
                "type": "number",
                "example": 4.5
            },
            "ratingsQuantity": {
                "type": "integer",
                "example": 100
            },
            "favoritesCount": {
                "type": "integer",
                "example": 50
            }
        }
    }
}
