{
    "/products/category/{categoryId}": {
        "get": {
            "tags": ["Product"],
            "summary": "Get products by category ID",
            "description": "Retrieve all furniture products that belong to a specific category",
            "operationId": "getProductsByCategoryId",
            "parameters": [
                {
                    "name": "categoryId",
                    "in": "path",
                    "required": true,
                    "type": "string",
                    "description": "Category ID"
                }
            ],
            "responses": {
                "200": {
                    "description": "A list of products in the selected category",
                    "schema": {
                        "type": "array",
                        "items": { "$ref": "#/definitions/Product" }
                    }
                },
                "404": { "description": "No products found for this category" },
                "400": { "description": "Invalid category ID" },
                "500": { "description": "Server error" }
            }
        }
    }
}
