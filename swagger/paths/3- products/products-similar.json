{
    "/products/{id}/similar": {
        "get": {
            "tags": ["Products"],
            "summary": "Get similar products",
            "description": "Fetches similar products based on the given product ID.",
            "operationId": "getSimilarProducts",
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "schema": { "type": "string" },
                    "description": "Product ID"
                }
            ],
            "responses": {
                "200": {
                    "description": "List of similar products",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "array",
                                "items": { "$ref": "#/components/schemas/Product" }
                            }
                        }
                    }
                },
                "404": { "description": "Product not found" }
            }
        }
    }
}
