{
    "/users/{id}/favorites": {
        "get": {
            "tags": ["Users"],
            "summary": "Get user's favorite products",
            "description": "Fetches the list of products marked as favorites by a specific user.",
            "operationId": "getUserFavorites",
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "description": "User ID",
                    "schema": { "type": "string" }
                }
            ],
            "responses": {
                "200": {
                    "description": "List of favorite products",
                    "schema": { "$ref": "#/definitions/UserFavorites" }
                },
                "404": { "description": "User not found" }
            }
        },
        "post": {
            "tags": ["Users"],
            "summary": "Add product to favorites",
            "description": "Adds a product to the user's favorites list.",
            "operationId": "addFavorite",
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "schema": { "type": "string" }
                }
            ],
            "requestBody": {
                "required": true,
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "productId": {
                                    "type": "string",
                                    "example": "6728e5a9c1d9a5aefc61d6aa"
                                }
                            }
                        }
                    }
                }
            },
            "responses": {
                "200": { "description": "Product added to favorites" },
                "400": { "description": "Product already in favorites" }
            }
        },
        "delete": {
            "tags": ["Users"],
            "summary": "Remove product from favorites",
            "description": "Removes a product from the user's favorites list.",
            "operationId": "removeFavorite",
            "parameters": [
                { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } },
                {
                    "name": "productId",
                    "in": "query",
                    "required": true,
                    "schema": { "type": "string" }
                }
            ],
            "responses": {
                "200": { "description": "Product removed from favorites" },
                "404": { "description": "Product not found in favorites" }
            }
        }
    }
}
