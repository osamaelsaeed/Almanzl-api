{
    "/auth/{id}": {
        "get": {
            "tags": ["Auth"],
            "summary": "Get user profile by ID",
            "description": "Fetches the profile information of the authenticated user by ID.",
            "operationId": "getUserProfile",
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "schema": { "type": "string" },
                    "description": "User ID"
                }
            ],
            "security": [{ "bearerAuth": [] }],
            "responses": {
                "200": {
                    "description": "User profile fetched successfully",
                    "content": {
                        "application/json": {
                            "schema": { "$ref": "#/components/schemas/User" }
                        }
                    }
                },
                "401": { "description": "Unauthorized" },
                "404": { "description": "User not found" }
            }
        },
        "delete": {
            "tags": ["Admin"],
            "summary": "Delete a user (admin only)",
            "description": "Deletes a user account by ID. Admin-only endpoint.",
            "operationId": "deleteUser",
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "schema": { "type": "string" },
                    "description": "User ID"
                }
            ],
            "security": [{ "bearerAuth": [] }],
            "responses": {
                "200": { "description": "User deleted successfully" },
                "403": { "description": "Forbidden - Admin access only" },
                "404": { "description": "User not found" }
            }
        }
    }
}
